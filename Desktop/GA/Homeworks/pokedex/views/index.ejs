   /* } */

    img {
        height: 250px;
        width: 200px;
        border: 1px solid green;
        /* object-fit: contain; */
        /* display: none; */
    }

    button {
        background-color: yellow;
        border-radius: 11px;
        padding: 15px 18px;
        margin: 5px 5px 20px 5px;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        width: 95%;
        margin: 0 auto;
        border: 3px solid yellow;
        min-width: 750px;
    }
    
